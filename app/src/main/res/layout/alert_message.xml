<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="bottom|center"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dismissdialog"
        android:background="@drawable/dialogbg"
        android:gravity="center"
        android:orientation="vertical">

        <com.sample.program.sample_array_functions.Custom.MyTextViewBold
            android:id="@+id/dialoghead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:text="How Medici Works"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium" />


        <com.sample.program.sample_array_functions.Custom.MyTextViewRegular
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:scrollbars="vertical"

            android:textColor="@color/black"
            android:textSize="@dimen/text_medium" />


    </LinearLayout>

    <com.sample.program.sample_array_functions.Custom.MyTextViewBold
        android:id="@+id/dismissdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/dialogbg"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:text="Dismiss"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_large" />

</RelativeLayout>